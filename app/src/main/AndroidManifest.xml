<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".presentation.GenericApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_xcotv"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:banner="@drawable/ic_xcotv">

        <activity android:name=".presentation.MainActivity"
            android:screenOrientation="landscape"
            android:exported="true">
        </activity>

        <activity android:name=".presentation.SelectLanguageActivity"
            android:screenOrientation="landscape"
            android:exported="true">
        </activity>


        <activity android:name=".presentation.profile.SelectProfileActivity"
            android:screenOrientation="landscape"
            android:exported="true">
        </activity>

        <activity android:name=".presentation.SplashScreenActivity"
            android:screenOrientation="landscape"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>